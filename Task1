CREATE DATABASE Blog

USE Blog

CREATE TABLE Users
(
Id INT(20) PRIMARY KEY,
Name NVARCHAR(20) NOT NULL,
Surname NVARCHAR(20)NOT NULL,
Email NVARCHAR(30) CONSTRAINT BLG_USR_EMAIL CHECK(Email BETWEEN 4 AND 100) UNIQUE NOT NULL,
)

CREATE TABLE Posts
(
LikeCount INT,
Title NVARCHAR(500) NOT NULL,
CreatedAt DATETIME2,
UserId INT PRIMARY KEY IDENTITY,
)
ALTER TABLE Posts
ADD UserId INT FOREIGN KEY(UserId) REFERENCES Users(Id)

SELECT *FROM Users
SELECT Name+' '+Surname AS 'Fullname' FROM Users

SELECT *FROM Posts WHERE Posts LikeCount>10

SELECT *FROM Posts WHERE Posts (Title BETWEEN 20 AND 100)

SELECT *FROM Posts WHERE Posts LikeCount>Posts(LikeCount)
